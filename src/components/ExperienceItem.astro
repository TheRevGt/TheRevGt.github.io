---
import LinkInline from ".//elements/LinkInline.astro";
import BuilderIcon from "./Icons/Builder.astro";
import PersonBdgeIcon from "./Icons/PersonBadge.astro";
import CalenderRangeIcon from "./Icons/CalenderRange.astro";
interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<p class="text-sm text-sky-700/90 dark:text-sky-400 flex mb-3">
  <span> <CalenderRangeIcon class="size-4 sm:size-5 mx-2" /></span>
  {date}
</p>
<div
  class="absolute w-3 h-3 bg-sky-600 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-sky-400"
>
</div>
<h3
  class="mb-3 text-md text-gray-600 dark:text-white font-bold flex pt-1 text-lg md:text-2xl"
>
  <span> <PersonBdgeIcon class="size-4 sm:size-5 m-2" /></span>
  {title}
</h3>
<p class="text-mg font-semibold text-gray-900 dark:text-white flex pt-1">
  <span> <BuilderIcon class="size-4 sm:size-5 mx-2" /></span>
  {company}
</p>
<div
  class="relative flex flex-col gap-2 md:col-span-3 pb-5 text-base text-gray-500 dark:text-gray-400 text-justify"
>
  <p class="py-2 text-sm md:text-base">
    {description}
  </p>
  {
    link && (
      <LinkInline href={link}>
        Saber m√°s{" "}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 icon icon-tabler icon-tabler-chevron-right"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="1"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M9 6l6 6l-6 6" />
        </svg>
      </LinkInline>
    )
  }
</div>
